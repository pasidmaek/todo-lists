{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@context/*": ["context/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": ["src"]
}
